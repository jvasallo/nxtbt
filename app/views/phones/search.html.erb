<p><%= link_to 'Home', phones_path %>
<%= link_to 'Top 5', top_phones_path %>
<%= link_to 'Search Phones', search_phones_path %>
<%= link_to 'Add New Phone', new_phone_path %>

<br />
<center>
<h1>Find Your NeXT Phone!</h1>

<%= form_tag search_phones_path, :method => 'get' do %>
<p>
<%= label_tag :search_text %>
<%= text_field_tag :search_text, params[:search_text] %>
</p>
<p>
<%= submit_tag 'Search' %>
</p>
<% end %>

<% if @phones %>

<table>
  <tr>
    <th>Manufacturer</th>
    <th>Name</th>
    <th>Rating</th>
    <th>Os</th>
    <th>Description</th>
    <th>Screen size</th>
    <th>Weight</th>
    <th>Release date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.manufacturer %></td>
    <td><%= phone.name %></td>
    <td><%= phone.rating %></td>
    <td><%= phone.os %></td>
    <td><%= phone.description %></td>
    <td><%= phone.screen_size %></td>
    <td><%= phone.weight %></td>
    <td><%= phone.release_date %></td>
    <td><%= link_to 'Show', phone %></td>
    <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
    <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</center>

<% end %>